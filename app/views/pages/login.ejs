<main>
  <% 
   let avisoErro = {"email":"", "password":""}
   let msgErro = {"email":"", "password":""}
      if(listaErros){
        console.log(listaErros.errors);
          listaErros.errors.forEach(function(itemErro){
              if(itemErro.path == "email"){
                  avisoErro.email = "erro";
                  msgErro.email = itemErro.msg
              }
              if(itemErro.path == "password"){
                  avisoErro.password = "erro";
                  msgErro.password = itemErro.msg
              }
          })
      }
  %>
    <h1>Faça o seu login</h1>
    <form method="post" action="/login">
        <label for="email">E-mail</label>
        <input type="text" id="email" name="email" required
          class="<%= avisoErro.email %>" />
        <span>
          <%= msgErro.email %>
        </span> 
        <label for="password">Senha</label>
        <input type="password" id="password" name="password" required
            class="<%=  avisoErro.password %>" />
        <span id="msgerror">
            <%= msgErro.password %>
        </span>
        </span>
        </span>
        <button>Entrar</button>
    </form>
